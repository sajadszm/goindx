{
  "name": "wp-desktop-manager-jules",
  "version": "0.1.0",
  "description": "WordPress Desktop Manager by Jules AI",
  "author": "Jules AI",
  "license": "ISC",
  "main": "dist/main/main.js",
  "homepage": "./",
  "scripts": {
    "start:renderer": "cross-env NODE_ENV=development webpack serve --config webpack.config.js --port 9000",
    "build:renderer": "cross-env NODE_ENV=production webpack --config webpack.config.js --mode production",
    "build:main": "tsc -p tsconfig.json --outDir dist/main",
    "watch:main": "tsc -p tsconfig.json --outDir dist/main --watch",
    "electron:start:dev": "concurrently -k -s first \"npm:watch:main\" \"npm:start:renderer\" \"wait-on http://localhost:9000 && cross-env NODE_ENV=development electron .\"",
    "electron:package": "npm run build:renderer && npm run build:main && electron-builder",
    "lint": "eslint . --ext .ts,.tsx",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@emotion/react": "^11.13.0",
    "@emotion/styled": "^11.13.0",
    "@mui/icons-material": "^5.16.4",
    "@mui/material": "^5.16.4",
    "axios": "^1.7.2",
    "electron": "^31.2.1",
    "electron-store": "^8.2.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^7.6.3"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.25.0",
    "@babel/preset-react": "^7.24.7",
    "@types/axios": "^0.14.0",
    "@types/node": "^20.14.10",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@types/react-router-dom": "^5.3.3",
    "@typescript-eslint/eslint-plugin": "^7.16.0",
    "@typescript-eslint/parser": "^7.16.0",
    "babel-loader": "^9.1.3",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron-builder": "^24.13.3",
    "electron-devtools-installer": "^3.2.0",
    "eslint": "^8.57.0",
    "eslint-plugin-react": "^7.34.4",
    "html-webpack-plugin": "^5.6.0",
    "ts-loader": "^9.5.1",
    "typescript": "^5.8.3",
    "wait-on": "^7.2.0",
    "webpack": "^5.93.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.0.4"
  },
  "build": {
    "appId": "com.jules.wpdesktopmanager.v5",
    "productName": "WordPressDesktopManagerJulesV5",
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "asarUnpack": [],
    "directories": {
      "buildResources": "assets",
      "output": "release"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "mac": {
      "icon": "assets/icon.png"
    },
    "linux": {
      "icon": "assets/icon.png"
    }
  }
}
